@model IEnumerable<BookCompanyManagement.Models.PaperMill>

@{
    ViewBag.Title = "造纸厂";
}

<h2>造纸厂</h2>

<p>
    @Html.ActionLink("新增造纸厂", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PaperMillName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PaperMillName)
        </td>
        <td>
            @Html.ActionLink("修改", "Edit", new { id=item.PaperMillId }) |
            @Html.ActionLink("明细", "Details", new { id=item.PaperMillId })
